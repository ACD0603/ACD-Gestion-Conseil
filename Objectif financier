    <script>
        const content = {
            immobilier: {
                title: "Achat Immobilier",
                desc: "Votre projet immobilier nécessite une planification rigoureuse. Qu'il s'agisse d'une résidence principale ou d'un investissement locatif, nous analysons votre capacité d'emprunt et l'apport nécessaire.",
                icon: "fa-home",
                color: "bg-blue-100 text-blue-600"
            },
            retraite: {
                title: "Préparer ma Retraite",
                desc: "Anticiper la baisse de revenus à la retraite est crucial. Nous vous aidons à choisir les meilleurs supports (PER, Assurance-vie) pour vous garantir une sérénité financière future.",
                icon: "fa-umbrella-beach",
                color: "bg-emerald-100 text-emerald-600"
            },
            epargne: {
                title: "Épargne de Précaution",
                desc: "L'épargne de précaution est le socle de votre patrimoine. Elle doit être liquide et disponible immédiatement pour parer aux coups durs sans impacter vos placements long terme.",
                icon: "fa-piggy-bank",
                color: "bg-amber-100 text-amber-600"
            },
            etudes: {
                title: "Études des Enfants",
                desc: "Le coût des études supérieures peut être important. En commençant tôt, vous lissez l'effort d'épargne pour offrir à vos enfants la liberté de choisir leur cursus.",
                icon: "fa-graduation-cap",
                color: "bg-purple-100 text-purple-600"
            },
            transmission: {
                title: "Transmission / Succession",
                desc: "Organiser sa succession permet d'éviter les conflits et d'optimiser la pression fiscale pour vos héritiers. Protégez ceux que vous aimez dès aujourd'hui.",
                icon: "fa-hand-holding-heart",
                color: "bg-rose-100 text-rose-600"
            },
            croissance: {
                title: "Faire fructifier un capital",
                desc: "Votre capital mérite une attention particulière. Nous étudions votre profil de risque pour vous proposer une allocation d'actifs diversifiée et performante.",
                icon: "fa-chart-pie",
                color: "bg-indigo-100 text-indigo-600"
            }
        };

        function showPage(pageId) {
            const home = document.getElementById('home-page');
            const detail = document.getElementById('detail-page');

            if (pageId === 'home') {
                detail.classList.add('hidden-page');
                home.classList.remove('hidden-page');
                window.scrollTo({ top: 0, behavior: 'smooth' });
            } else {
                const data = content[pageId];
                if (data) {
                    document.getElementById('detail-title').innerText = data.title;
                    document.getElementById('detail-desc').innerText = data.desc;
                    
                    const iconDiv = document.getElementById('detail-icon');
                    iconDiv.className = `w-20 h-20 rounded-2xl flex items-center justify-center mb-8 ${data.color}`;
                    iconDiv.innerHTML = `<i class="fas ${data.icon} text-3xl"></i>`;

                    home.classList.add('hidden-page');
                    detail.classList.remove('hidden-page');
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }
            }
        }
    </script>
