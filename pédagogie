    <script>
        lucide.createIcons();

        function checkAnswer(isCorrect) {
            const feedback = document.getElementById('feedback');
            feedback.classList.remove('hidden');
            if(isCorrect) {
                feedback.innerText = "Bravo ! Un ETF contient des centaines d'entreprises. üöÄ";
                feedback.className = "mt-6 font-bold text-green-400";
            } else {
                feedback.innerText = "Oups ! C'est faux. Un ETF diversifie ton argent sur plein d'entreprises. üí°";
                feedback.className = "mt-6 font-bold text-rose-400";
            }
        }
    </script>
